<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
 
  <!-- Screen Design for Photos -->

    <Button
        android:id="@+id/puzzle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onClickPuzzle1"
        android:text="Puzzle #1" />

    <Button
        android:id="@+id/puzzle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onClickPuzzle2"
        android:text="Puzzle #2" />

    <Button
        android:id="@+id/puzzle3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onClickPuzzle3"
        android:text="Puzzle #3" />
 
</LinearLayout>