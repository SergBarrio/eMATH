<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="right"
	    android:orientation="vertical" >

		<Button
		    android:id="@+id/help"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Hint" 
		    android:onClick="onClickHelp"/>
	
	        <TextView
	            android:id="@+id/star1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dp"
	            android:gravity="center"
	            android:text="Question #1"
	            android:textAppearance="?android:attr/textAppearanceLarge" />

	        <LinearLayout
	            android:id="@+id/musiclayout"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	            
	            <View
	                android:id="@+id/timesig"
	                android:layout_width="30dp"
	                android:layout_height="80dp"
	                android:layout_marginLeft="0dp"
	                android:background="@drawable/n44"
	                />

	            

	            <Gallery
	                android:id="@+id/gallery1"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginBottom="10dp"
	                android:layout_marginLeft="-290dp"
	                android:layout_weight="1" />

	        </LinearLayout>

	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:text="Choose a note to complete the measure!" />

	        <Spinner
	            android:id="@+id/spinner1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:entries="@array/music_answers"
	            android:prompt="@string/spinner_prompt"
	            android:layout_weight="1" />

			<LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="right" >

				<Button
				    android:id="@+id/submit1"
				    android:layout_width="95dp"
				    android:layout_height="wrap_content"
				    android:layout_marginBottom="25dp"
				    android:layout_marginRight="110dp"
				    android:onClick="onClickSubmit1"
				    android:text="Submit" />

	        </LinearLayout>
	
	        <TextView
	            android:id="@+id/star2"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dp"
	            android:gravity="center"
	            android:text="Question #2"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	        
	        <TextView
	            android:id="@+id/text2"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
				 android:text="Please press Play to answer this question." />

	        <Button
	            android:id="@+id/playMusic"
	            android:layout_width="95dp"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="25dp"
	            android:layout_marginRight="20dp"
	            android:onClick="onClickPlay"
	            android:layout_gravity="center"
	            android:text="Play" />
	
	        <TextView
	            android:id="@+id/question1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dp"
	            android:gravity="left"
	            android:text="Question"
	            android:textAppearance="?android:attr/textAppearanceMedium" />
	
	        <RadioGroup
	            android:id="@+id/radioGroup1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dp" >
	
	            <RadioButton
	                android:id="@+id/choice0"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="RadioButton" />
	
	            <RadioButton
	                android:id="@+id/choice1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="RadioButton" />
	
	            <RadioButton
	                android:id="@+id/choice2"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="RadioButton" />
	
	            <RadioButton
	                android:id="@+id/choice3"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="RadioButton" />
	        </RadioGroup>

	        <Button
	            android:id="@+id/submit2"
	            android:layout_width="95dp"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:layout_marginBottom="25dp"
	            android:onClick="onClickSubmit2"
	            android:text="Submit" />

	        <TextView
	            android:id="@+id/star3"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dp"
	            android:gravity="center"
	            android:text="Question #3"
	            android:textAppearance="?android:attr/textAppearanceLarge" />

	        <TextView
	            android:id="@+id/question2"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="10dp"
	            android:gravity="left"
	            android:text="Question"
	            android:textAppearance="?android:attr/textAppearanceMedium" />

	        <EditText
	            android:id="@+id/answer"
	            android:layout_width="150dp"
	            android:layout_height="wrap_content"
	            android:ems="10"
	            android:layout_gravity="center"
	            android:inputType="number"
	            android:layout_marginBottom="10dp" >

	           
	        </EditText>

	        <Button
	            android:id="@+id/submit3"
	            android:layout_width="95dp"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:layout_marginBottom="25dp"
	            android:onClick="onClickSubmit3"
	            android:text="Submit" />

	        <Button
	            android:id="@+id/finished"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Finished" />

	</LinearLayout>
</ScrollView>