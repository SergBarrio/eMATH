<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.internationalmall"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.VIBRATE" />
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait" >
        <activity
            android:name=".restaurant_main"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name=".order_list"
            android:label="@string/title_order_list" >
        </activity>
        
        <activity 
            android:name=".problem_screen"
            android:label="@string/title_problem_screen" >
        </activity>
        
        <activity 
            android:name=".results_screen"
            android:label="@string/title_results_screen" >
        </activity>
        
    </application>
</manifest>