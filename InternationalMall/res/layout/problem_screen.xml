<?xml version="1.0" encoding="utf-8"?>
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       	android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/chrome_background">
        
       	<TextView
    	    android:id="@+id/showtime"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_marginTop="5dp"
    	    android:layout_marginRight="10dp"
    	    android:textStyle="bold"
    	    android:gravity="right"
    	    android:textAppearance="?android:attr/textAppearanceLarge" />
      
        <TextView
    	    android:id="@+id/goal_total"
    	    android:layout_width="300dp"
    	    android:layout_height="45dp"
    	    android:layout_marginBottom="5dp"
    	    android:gravity="center_horizontal"
    	    android:textAppearance="?android:attr/textAppearanceMedium" />

		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            
            <TextView 
                android:id="@+id/cup1_size"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="left" />
            <TextView 
                android:id="@+id/cup2_size"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"	
                android:layout_gravity="right" />
            
        </LinearLayout>
		
       <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
	    	<ImageView
            	android:id="@+id/cup1"
            	android:layout_width="117dp"
            	android:layout_height="90dp"
            	android:layout_marginLeft="30dp"
            	android:background="@drawable/measuring_cup"/>

	    	<ImageView
	    	    android:id="@+id/cup2"
	    	    android:layout_width="117dp"
	    	    android:layout_height="90dp"
	    	    android:layout_marginLeft="43dp"
	    	    android:background="@drawable/measuring_cup" />
	    	
		 </LinearLayout>  
		 
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cup1_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"	
                android:layout_gravity="left"
                android:gravity="center" />
            <TextView
                android:id="@+id/cup2_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"	
                android:layout_gravity="left"
                android:gravity="center" />
        </LinearLayout>
        
		 <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
	    	<Button
            	android:id="@+id/minus_cup1"
            	android:layout_width="40dp"
            	android:layout_height="40dp"
            	android:background="@drawable/minus_button"
            	android:layout_marginLeft="35dp"
            	android:onClick="onClick" />
	    	<Button
            	android:id="@+id/plus_cup1"
            	android:layout_width="40dp"
            	android:layout_height="40dp"
            	android:background="@drawable/plus_button"
            	android:layout_marginLeft="10dp"
            	android:onClick="onClick" />
	    	<Button
            	android:id="@+id/minus_cup2"
            	android:layout_width="40dp"
            	android:layout_height="40dp"
            	android:background="@drawable/minus_button"
            	android:layout_marginLeft="70dp"
            	android:onClick="onClick" />
	    	<Button
            	android:id="@+id/plus_cup2"
            	android:layout_width="40dp"
            	android:layout_height="40dp"
            	android:background="@drawable/plus_button"
            	android:layout_marginLeft="10dp"
            	android:onClick="onClick" />
	    </LinearLayout>
		 
		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >
            <TextView 
                android:id="@+id/cup3_size"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"	
                android:layout_gravity="left"
                android:gravity="center" />
            <TextView 
                android:id="@+id/cup4_size"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"	
                android:layout_gravity="right"
                android:gravity="center" />            
        </LinearLayout>
        
	    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
	    	
	    	<ImageView
            	android:id="@+id/cup3"
            	android:layout_width="117dp"
            	android:layout_height="90dp"
            	android:layout_marginLeft="30dp"
            	android:background="@drawable/measuring_cup"/>

	    	<ImageView
	    	    android:id="@+id/cup4"
	    	    android:layout_width="117dp"
	    	    android:layout_height="90dp"
	    	    android:layout_marginLeft="43dp"
	    	    android:background="@drawable/measuring_cup" />
	    </LinearLayout> 
	    
	    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cup3_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"	
                android:layout_gravity="left"
                android:gravity="center" />
            <TextView
                android:id="@+id/cup4_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"	
                android:layout_gravity="left"
                android:gravity="center" />
        </LinearLayout>
	    
	    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
	    	<Button
            	android:id="@+id/minus_cup3"
            	android:layout_width="40dp"
            	android:layout_height="40dp"
            	android:background="@drawable/minus_button"
            	android:layout_marginLeft="35dp"
            	android:onClick="onClick" />
	    	<Button
            	android:id="@+id/plus_cup3"
            	android:layout_width="40dp"
            	android:layout_height="40dp"
            	android:background="@drawable/plus_button"
            	android:layout_marginLeft="10dp"
            	android:onClick="onClick" />
	    	<Button
            	android:id="@+id/minus_cup4"
            	android:layout_width="40dp"
            	android:layout_height="40dp"
            	android:background="@drawable/minus_button"
            	android:layout_marginLeft="70dp"
            	android:onClick="onClick" />
	    	<Button
            	android:id="@+id/plus_cup4"
            	android:layout_width="40dp"
            	android:layout_height="40dp"
            	android:background="@drawable/plus_button"
            	android:layout_marginLeft="10dp"
            	android:onClick="onClick" />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="20dp" >

		</LinearLayout>
	    
	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="bottom"
	        android:gravity="bottom"
	        android:orientation="horizontal" >

	        <Button
	            android:id="@+id/submit"
	            android:layout_width="wrap_content"
	            android:layout_height="40dp"
	            android:layout_centerInParent="true"
	            android:gravity="center_horizontal"
	            android:onClick="onClick"
	            android:text="Submit" />

		</RelativeLayout>
	    
	</LinearLayout>