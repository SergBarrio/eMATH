<?xml version="1.0" encoding="utf-8"?>
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       	android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white">
        
       	<RelativeLayout 
	        android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

	    	<TextView
	    	    android:id="@+id/goal_total"
	    	    android:layout_marginTop="20dp"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="wrap_content"
	    	    android:layout_centerInParent="true"
	    	    android:gravity="center_horizontal" />

	    </RelativeLayout>
       	
		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <TextView 
                android:id="@+id/cup1_size"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="left" />
            <TextView 
                android:id="@+id/cup2_size"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"	
                android:layout_gravity="right" />
            
        </LinearLayout>
		
       <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
	    	<ImageView
            	android:id="@+id/cup1"
            	android:layout_width="146dp"
            	android:layout_height="110dp"
            	android:layout_marginLeft="10dp"
            	android:background="@drawable/cup"/>

	    	<ImageView
	    	    android:id="@+id/cup2"
	    	    android:layout_width="146dp"
	    	    android:layout_height="110dp"
	    	    android:layout_marginLeft="10dp"
	    	    android:background="@drawable/cup" />
	    	
		 </LinearLayout>  
		 
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cup1_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"	
                android:layout_gravity="left"
                android:gravity="center" />
            <TextView
                android:id="@+id/cup2_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"	
                android:layout_gravity="left"
                android:gravity="center" />
        </LinearLayout>
        
		 <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
	    	<Button
            	android:id="@+id/plus_cup1"
            	android:layout_width="30dp"
            	android:layout_height="wrap_content"
            	android:background="@drawable/plus"
            	android:layout_marginLeft="40dp"
            	android:onClick="onClick" />
	    	<Button
            	android:id="@+id/minus_cup1"
            	android:layout_width="30dp"
            	android:layout_height="wrap_content"
            	android:background="@drawable/minus"
            	android:layout_marginLeft="20dp"
            	android:onClick="onClick" />
	    	<Button
            	android:id="@+id/plus_cup2"
            	android:layout_width="30dp"
            	android:layout_height="wrap_content"
            	android:background="@drawable/plus"
            	android:layout_marginLeft="80dp"
            	android:onClick="onClick" />
	    	<Button
            	android:id="@+id/minus_cup2"
            	android:layout_width="30dp"
            	android:layout_height="wrap_content"
            	android:background="@drawable/minus"
            	android:layout_marginLeft="20dp"
            	android:onClick="onClick" />
	    </LinearLayout>
		 
		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >
            <TextView 
                android:id="@+id/cup3_size"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"	
                android:layout_gravity="left"
                android:gravity="center" />
            <TextView 
                android:id="@+id/cup4_size"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"	
                android:layout_gravity="right"
                android:gravity="center" />            
        </LinearLayout>
        
	    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
	    	
	    	<ImageView
            	android:id="@+id/cup3"
            	android:layout_width="146dp"
            	android:layout_height="110dp"
            	android:layout_marginLeft="10dp"
            	android:background="@drawable/cup"/>

	    	<ImageView
	    	    android:id="@+id/cup4"
	    	    android:layout_width="146dp"
	    	    android:layout_height="110dp"
	    	    android:layout_marginLeft="10dp"
	    	    android:background="@drawable/cup" />
	    	
	    </LinearLayout> 
	    
	    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cup3_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"	
                android:layout_gravity="left"
                android:gravity="center" />
            <TextView
                android:id="@+id/cup4_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"	
                android:layout_gravity="left"
                android:gravity="center" />
        </LinearLayout>
	    
	    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
	    	<Button
            	android:id="@+id/plus_cup3"
            	android:layout_width="30dp"
            	android:layout_height="wrap_content"
            	android:background="@drawable/plus"
            	android:layout_marginLeft="40dp"
            	android:onClick="onClick" />
	    	<Button
            	android:id="@+id/minus_cup3"
            	android:layout_width="30dp"
            	android:layout_height="wrap_content"
            	android:background="@drawable/minus"
            	android:layout_marginLeft="20dp"
            	android:onClick="onClick" />
	    	<Button
            	android:id="@+id/plus_cup4"
            	android:layout_width="30dp"
            	android:layout_height="wrap_content"
            	android:background="@drawable/plus"
            	android:layout_marginLeft="80dp"
            	android:onClick="onClick" />
	    	<Button
            	android:id="@+id/minus_cup4"
            	android:layout_width="30dp"
            	android:layout_height="wrap_content"
            	android:background="@drawable/minus"
            	android:layout_marginLeft="20dp"
            	android:onClick="onClick" />
	    </LinearLayout>
		
	    <RelativeLayout 
	        android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
	    	<Button
	    	    android:id="@+id/submit"
	    	    android:layout_marginTop="30dp"
	    	    android:layout_centerInParent="true"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="40dp"
	    	    android:gravity="center_horizontal"
	    	    android:text="Submit"
	    	    android:onClick="onClick"
	    	    />
	    </RelativeLayout>
	    
	</LinearLayout>

