<?xml version="1.0" encoding="utf-8"?>	
    <TableLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:background="@color/sandy_brown">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <Button 
        		android:id="@+id/cup1"     		
        		android:text="1/8 Cup"
        		android:gravity="center_horizontal"/>
            <Button 
        		android:id="@+id/cup2"       		
        		android:text="1/4 Cup"
        		android:gravity="center_horizontal"/>    
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <Button 
        		android:id="@+id/plus_cup1"         		
        		android:text="+"
        		android:gravity="center_horizontal"/>

            <Button
                android:id="@+id/minus_cup1"
                android:gravity="center_horizontal"
                android:text="-" />

            <Button 
        		android:id="@+id/plus_cup2"       		
        		android:text="+"
        		android:gravity="center_horizontal"/>
            <Button 
        		android:id="@+id/minus_cup2"       		
        		android:text="-"
        		android:gravity="center_horizontal"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button 
        		android:id="@+id/cup3"        		
        		android:text="1/3 Cup"
        		android:gravity="center_horizontal"/>
            <Button 
        		android:id="@+id/cup4"       		
        		android:text="1/2 Cup"
        		android:gravity="center_horizontal"/> 
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button 
        		android:id="@+id/plus_cup3"        		
        		android:text="+"
        		android:gravity="center_horizontal"/>
            <Button 
        		android:id="@+id/minus_cup3"         		
        		android:text="-"
        		android:gravity="center_horizontal"/>
            <Button 
        		android:id="@+id/plus_cup4"        		
        		android:text="+"
        		android:gravity="center_horizontal"/>
            <Button 
        		android:id="@+id/minus_cup4"        		
        		android:text="-"
        		android:gravity="center_horizontal"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button 
        		android:id="@+id/button" 
        		android:gravity="center_horizontal"
        		android:text="->Result Screen"/>
        </TableRow>
    </TableLayout>
